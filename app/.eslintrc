{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "plugins": [ "flowtype" ],
  "rules": {
    "indent": ["error", 2],
    "flowtype/require-valid-file-annotation": [
      2,
      "always"
    ],
    "flowtype/space-after-type-colon": "off",
    "react/display-name": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "flowVersion": "0.123"
  }
}
